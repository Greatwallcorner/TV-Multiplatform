save:
INSERT INTO History(key, vodPic, vodName, vodFlag, vodRemarks, episodeUrl, createTime, cid) VALUES(?,?,?,?,?,?,CURRENT_TIMESTAMP ,?);

findByKey:
SELECT * FROM History
WHERE key = ?;


updateSome:
UPDATE History SET vodFlag = ?, vodRemarks = ?, episodeUrl = ?
WHERE key = ?;

getAll:
SELECT * FROM History
WHERE cid = ? ORDER BY createTime DESC;

deleteBatch:
DELETE FROM History
WHERE key IN ?;

deleteAll:
DELETE FROM History
WHERE cid = ?;